@model vmHome
@{
    ViewBag.Title = "關於我們";
}

<section id="about">
    <div class="container">
        <!-- 使用1個row配版 -->
        <div class="row">
            <div class="col-md-8 offset-md-2 text-center">
                <!--offset-md-2 內縮2攔-->
                <h3>@ShopService.About</h3>
                <div class="row">
                    <div class="col-md-4">
                        <img src="@Url.Content("~/Images/Application/old_ps_logo.jpg")" alt="">
                        <h3>@SessionService.GetHomePageInfo("ShopName")</h3>
                    </div>
                    <div class="col-md-8 text-start">
                        <!--text-left 文字靠左對齊-->
                        <p class="text-left">@Model.ApplicationsData.shop_about</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
