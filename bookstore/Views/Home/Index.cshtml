@model vmHome

@{
    ViewBag.Title = "Home Page";
}
<script>
    var home_url = document.getElementsByClassName("cusImg");
        function redirectToShop() {
            window.location.href = "@Url.Action("Index" , "Shop")";
        }
</script>
<style>
</style>
@{
    List<string> pics = new List<string> { "FF7", "LD8", "MH", "Spiderman2" }; // 4 張圖片 
    foreach (string pic in pics)
    {
        string img_url = $"~/shoppers/images/{pic}.jpg";
        <div class="site-blocks-cover" style="background-image: url(@Url.Content(img_url));cursor: pointer;" data-aos="fade" onclick="redirectToShop()">
            <div class="container">
            </div>
        </div>
    }
}
<div class="site-section site-section-sm site-blocks-1">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-lg-4 d-lg-flex mb-4 mb-lg-0 pl-4" data-aos="fade-up" data-aos-delay="">
                <div class="icon mr-4 align-self-start">
                    <span class="icon-truck"></span>
                </div>
                <div class="text">
                    <h2 class="text-uppercase">全台免運費</h2>
                    <p>@Model.ApplicationsData.shipping_description</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-4 d-lg-flex mb-4 mb-lg-0 pl-4" data-aos="fade-up" data-aos-delay="100">
                <div class="icon mr-4 align-self-start">
                    <span class="icon-refresh2"></span>
                </div>
                <div class="text">
                    <h2 class="text-uppercase">退換貨免費</h2>
                    <p>@Model.ApplicationsData.return_description</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-4 d-lg-flex mb-4 mb-lg-0 pl-4" data-aos="fade-up" data-aos-delay="200">
                <div class="icon mr-4 align-self-start">
                    <span class="icon-help"></span>
                </div>
                <div class="text">
                    <h2 class="text-uppercase">客戶服務與支援</h2>
                    <p>@Model.ApplicationsData.support_description</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="site-section site-blocks-2">
    <div class="container">
        <div class="row justify-content-center text-center mb-5">
            <div class="col-md-7 site-section-heading text-center pt-4">
                <h2>最新上市</h2>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model.CategorysData)
            {
                <div class="col-sm-6 col-md-6 col-lg-4 mb-4 mb-lg-0">
                    <a class="block-2-item" href="#">
                        <figure class="image">
                            <img src="@Url.Content("~/Images/Categorys/" + item.mno +".jpg")" alt="" class="img-fluid">
                        </figure>
                        <div class="text">
                            <span class="text-uppercase">收藏</span>
                            <h3>@item.mname</h3>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<div class="site-section block-3 site-blocks-2 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7 site-section-heading text-center pt-4">
                <h2>熱銷排行</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="nonloop-block-3 owl-carousel">
                    @foreach (var item in Model.FeaturedsData)
                     {
                        <div class="item boxShadow">
                            <div class="block-4 text-center">
                                <figure class="block-4-image">
                                    <a href="@Url.Action("Detail" , "Shop" , new { id = item.product_no})">
                                        <img src="@Url.Content("~/Images/Product/" + item.product_no + ".jpg")" alt="Image placeholder" class="img-fluid">
                                    </a>
                                </figure>
                                <div class="block-4-text p-4">
                                    <h3><a href="@Url.Action("Detail" , "Shop" , new { id = item.product_no})">@item.category_name</a></h3>
                                    <p class="mb-0">@item.product_name</p>
                                    <p class="text-primary font-weight-bold">$@item.sale_price</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

