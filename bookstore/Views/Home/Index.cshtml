@model vmHome

@{
    ViewBag.Title = "Home Page";
}
<script>
    // 圖片輪流顯示功能
    $(document).ready(function () {
        var currentIndex = 0;
        var imgElements = $(".mainImg");
        updateImage(); // 先執行一次，顯示第一張
        // 更新顯示圖片
        function updateImage() {
            imgElements.hide(); //隱藏所有圖片
            imgElements.eq(currentIndex).show(); // 顯示圖片
        }
        function nextButton() {
            currentIndex = (currentIndex - 1 + imgElements.length) % imgElements.length;
            updateImage();
        }
        function prevButton() {
            currentIndex = (currentIndex + 1) % imgElements.length;
            updateImage();
        }
        setInterval(prevButton, 5000); // 每隔5秒自動執行
    });
</script>
<style>
</style>

@foreach (var banner in Model.ApplicationBannerData)
{
    string bannerNane = banner;
    string img_url = @Url.Content("~/Images/MainBG/" + bannerNane);
    <div class="container-fluid">
        <div class="site-blocks-cover mainImg" style="background-image: url( @Url.Content(img_url) )" data-aos="fade" title="">
        </div>
    </div>
}

