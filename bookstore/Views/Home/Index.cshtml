</div>

<div class="site-section block-3 site-blocks-2 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7 site-section-heading text-center pt-4">
                <h2>最新上市</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="nonloop-block-3 owl-carousel">
                    @foreach (var item in Model.NewItemData)
                    {
                        <div class="item boxShadow">
                            <div class="block-4 text-center">
                                <figure class="block-4-image">
                                    <a href="@Url.Action("Detail" , "Shop" , new { id = item.book_no})">
                                        <img src="@Url.Content("~/Images/Product/" + item.book_no + ".jpg")" alt="Image placeholder" class="newItemImg">
                                    </a>
                                </figure>
                                <div class="block-4-text p-4">
                                    <h3><a href="@Url.Action("Detail" , "Shop" , new { id = item.book_no})">@item.book_name</a></h3>
                                    <p class="mb-0">@item.category_name</p>
                                    <p class="text-primary font-weight-bold">$@item.sale_price</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>