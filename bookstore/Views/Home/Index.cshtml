            @foreach (var item in Model.FeaturedsData)
            {
                <div class="col-md-4 mt-1-cust">
                    <div class="hotItem position-relative bigWidth">
                        <img src="@Url.Content("~/Images/Product/" + item.product_no +".jpg")" alt="">
                        <h4 class="text-center">@item.product_name</h4>
                    </div>
                </div>
            }
