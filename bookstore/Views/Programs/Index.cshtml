@using PagedList;
@using PagedList.Mvc;
@model IEnumerable<bookstore.Models.Programs>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row pt-3">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body data-list">
                <div class="mb-2">
                    @using (Html.BeginForm("Search", "Programs", FormMethod.Post))
                    {
                        <table>
                            <tr>
                                <td>
                                    <span class="control-label">查詢：</span>
                                </td>
                                <td class="pr-2">
                                    <input id="search_text" name="search_text" type="text" class="form-control data-list-search-text" style="width:200px;" placeholder="請輸入要查詢的內容!!" />
                                </td>
                                <td>
                                    <input type="submit" value="查詢" class="btn btn-primary" />
                                </td>
                            </tr>
                        </table>
                    }
                </div>
                <table class="table">
                    <tr>
                        <th>
                            @Html.ActionLink("新增", "Create", "Programs", new { Area = "" }, new { @class = "btn btn-primary" })
                        </th>
                        <th>
                            <a href="@Url.Action("ColumnSort" , new { id = "is_enabled"})">
                                @Html.DisplayNameFor(model => model.is_enabled)
                            </a>
                            @SessionService.GetColumnSortIcon(0, "is_enabled")
                        </th>
                        <th>
                            @*<a href="@Url.Action("ColumnSort" , new { id = "module_name"})">*@
                            @Html.DisplayNameFor(model => model.module_name)
                            @*</a>*@
                            @*@SessionService.GetColumnSortIcon(0, "module_name")*@
                        </th>
                        <th>
                            <a href="@Url.Action("ColumnSort" , new { id = "program_no"})">
                                @Html.DisplayNameFor(model => model.program_no)
                            </a>
                            @SessionService.GetColumnSortIcon(0, "program_no")
                        </th>
                        <th>
                            <a href="@Url.Action("ColumnSort" , new { id = "program_name"})">
                                @Html.DisplayNameFor(model => model.program_name)
                            </a>
                            @SessionService.GetColumnSortIcon(0, "program_name")
                        </th>
                        <th>
                            @*<a href="@Url.Action("ColumnSort" , new { id = "program_type_name"})">*@
                            @Html.DisplayNameFor(model => model.program_type_name)
                            @*</a>*@
                            @*@SessionService.GetColumnSortIcon(0, "program_type_name")*@
                        </th>
                        <th>
                            <a href="@Url.Action("ColumnSort" , new { id = "area_name"})">
                                @Html.DisplayNameFor(model => model.area_name)
                            </a>
                            @SessionService.GetColumnSortIcon(0, "area_name")
                        </th>
                        <th>
                            <a href="@Url.Action("ColumnSort" , new { id = "controller_name"})">
                                @Html.DisplayNameFor(model => model.controller_name)
                            </a>
                            @SessionService.GetColumnSortIcon(0, "controller_name")
                        </th>
                        <th>
                            <a href="@Url.Action("ColumnSort" , new { id = "action_name"})">
                                @Html.DisplayNameFor(model => model.action_name)
                            </a>
                            @SessionService.GetColumnSortIcon(0, "action_name")
                        </th>
                        <th>
                            <a href="@Url.Action("ColumnSort" , new { id = "parameter_value"})">
                                @Html.DisplayNameFor(model => model.parameter_value)
                            </a>
                            @SessionService.GetColumnSortIcon(0, "parameter_value")
                        </th>
                        <th>
                            <a href="@Url.Action("ColumnSort" , new { id = "remark"})">
                                @Html.DisplayNameFor(model => model.remark)
                            </a>
                            @SessionService.GetColumnSortIcon(0, "remark")
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.ActionLink("修改", "Edit", "Programs", new { id = item.rowid }, new { @class = "btn btn-primary" })
                                @Html.ActionLink("刪除", "Delete", "Programs", new { id = item.rowid }, new { @class = "btn btn-danger", onclick = "return confirm('是否確定要刪除?');" })
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.is_enabled)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.module_name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.program_no)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.program_name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.program_type_name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.area_name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.controller_name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.action_name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.parameter_value)
                            </td>
                            <td class="data-list-max">
                                @Html.DisplayFor(modelItem => item.remark)
                            </td>
                        </tr>
                    }

                </table>
            </div>
            <div class="card-footer">
                <table>
                    <tr>
                        <td class="pr-2">
                            <span class="control-label">
                                @SessionService.GetPageInfo(0)
                            </span>
                        </td>
                        <td>@Html.PagedListPager((IPagedList)Model, x => Url.Action("Index", new { page = x }))</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>
