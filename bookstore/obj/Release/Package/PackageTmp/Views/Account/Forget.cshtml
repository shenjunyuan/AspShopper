@model vmForget

@{
    ViewBag.Title = "Forget";
    Layout = "~/Views/Shared/_LayoutLite.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-screen">
        <div class="form-horizontal">
            <div class="register-box">
                <div class="card card-outline card-primary">
                    <div class="card-header text-center">
                        <h3>忘記密碼</h3>
                    </div>
                    <div class="card-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="input-group mb-3">
                            @Html.LabelFor(model => model.AccountEmail, htmlAttributes: new { @class = "control-label pr-3 pt-1" })
                            @Html.EditorFor(model => model.AccountEmail, new { htmlAttributes = new { @class = "form-control" } })
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-envelope"></span>
                                </div>
                            </div>
                        </div>
                        <div>
                            @Html.ValidationMessageFor(model => model.AccountEmail, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <div class="col-md-12">
                                <input type="submit" value="重設密碼" class="btn btn-primary" />
                                @Html.ActionLink("會員登入", "Login", "Account", null, new { @class = "btn btn-success" })
                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
        </div>
    </div>
}