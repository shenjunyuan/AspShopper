@model vmRegister

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutLite.cshtml";

    var GenderCodeList = Model.GetGenderCodeList();
}

@section scripts {
    <script src="@Url.Content("~/Scripts/datepicker.js")"></script>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-screen">
        <div class="form-horizontal">
            <div class="register-box">
                <div class="card">
                    <div class="card-header text-center">
                        <h3>@SessionService.AppName - 會員註冊</h3>
                    </div>
                    <div class="card-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="input-group mb-3">
                            @Html.LabelFor(model => model.AccountName, htmlAttributes: new { @class = "control-label pr-3 pt-1" })
                            @Html.EditorFor(model => model.AccountName, new { htmlAttributes = new { @class = "form-control" } })
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-user"></span>
                                </div>
                            </div>
                        </div>
                        <div>
                            @Html.ValidationMessageFor(model => model.AccountName, "", new { @class = "text-danger" })
                        </div>

                        <div class="input-group mb-3">
                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label pr-3 pt-1" })
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        <div>
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>

                        <div class="input-group mb-3">
                            @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "control-label pr-3 pt-1" })
                            @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        <div>
                            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>

                        <div class="input-group mb-3">
                            @Html.LabelFor(model => model.GenderCode, htmlAttributes: new { @class = "control-label pr-3 pt-1" })
                            @Html.DropDownListFor(model => model.GenderCode, GenderCodeList, new { @class = "form-control" })
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-restroom"></span>
                                </div>
                            </div>
                        </div>
                        <div>
                            @Html.ValidationMessageFor(model => model.GenderCode, "", new { @class = "text-danger" })
                        </div>

                        <div class="input-group mb-3">
                            @Html.LabelFor(model => model.Birthday, htmlAttributes: new { @class = "control-label pr-3 pt-1" })
                            @Html.EditorFor(model => model.Birthday, new { htmlAttributes = new { @class = "form-control datepicker" } })
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-calendar-alt"></span>
                                </div>
                            </div>
                        </div>
                        <div>
                            @Html.ValidationMessageFor(model => model.Birthday, "", new { @class = "text-danger" })
                        </div>

                        <div class="input-group mb-3">
                            @Html.LabelFor(model => model.ContactEmail, htmlAttributes: new { @class = "control-label pr-3 pt-1" })
                            @Html.EditorFor(model => model.ContactEmail, new { htmlAttributes = new { @class = "form-control" } })
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-envelope"></span>
                                </div>
                            </div>
                        </div>
                        <div>
                            @Html.ValidationMessageFor(model => model.ContactEmail, "", new { @class = "text-danger" })
                        </div>

                        <div class="input-group mb-3">
                            @Html.LabelFor(model => model.ContactPhone, htmlAttributes: new { @class = "control-label pr-3 pt-1" })
                            @Html.EditorFor(model => model.ContactPhone, new { htmlAttributes = new { @class = "form-control" } })
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-phone"></span>
                                </div>
                            </div>
                        </div>
                        <div>
                            @Html.ValidationMessageFor(model => model.ContactPhone, "", new { @class = "text-danger" })
                        </div>

                        <div class="input-group mb-3">
                            @Html.LabelFor(model => model.ContactAddress, htmlAttributes: new { @class = "control-label pr-3 pt-1" })
                            @Html.EditorFor(model => model.ContactAddress, new { htmlAttributes = new { @class = "form-control" } })
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-address-card"></span>
                                </div>
                            </div>
                        </div>
                        <div>
                            @Html.ValidationMessageFor(model => model.ContactAddress, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <div class="col-md-12">
                                <input type="submit" value="會員註冊" class="btn btn-primary" />
                                @Html.ActionLink("會員登入", "Login", "Account", null, new { @class = "btn btn-success" })
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>
}