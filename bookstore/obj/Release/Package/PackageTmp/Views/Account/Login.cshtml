@model vmLogin

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLite.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-screen">
        <div class="form-horizontal">
            <div class="login-box">
                <div class="card">
                    <div class="card-header text-center">
                        <h3>@SessionService.AppName - 會員登入</h3>
                    </div>
                    <div class="card-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="input-group mb-3">
                            @Html.LabelFor(model => model.AccountNo, htmlAttributes: new { @class = "control-label pr-3 pt-1" })
                            @Html.EditorFor(model => model.AccountNo, new { htmlAttributes = new { @class = "form-control", placeholder = "請輸入帳號或電子信箱!!" } })
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-user"></span>
                                </div>
                            </div>
                        </div>
                        <div>
                            @Html.ValidationMessageFor(model => model.AccountNo, "", new { @class = "text-danger" })
                        </div>

                        <div class="input-group mb-3">
                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label pr-3 pt-1" })
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        <div>
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <input type="submit" value="登入系統" class="btn btn-primary" />
                                @Html.ActionLink("忘記密碼", "Forget", "Account", null, new { @class = "btn btn-success" })
                                @Html.ActionLink("註冊會員", "Register", "Account", null, new { @class = "btn btn-info" })
                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
        </div>
    </div>
}